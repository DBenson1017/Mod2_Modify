        <button id="create-button"><%= link_to "Create A Playlist", new_playlist_path %></button>

        <div class="song-index-page-wrapper">
            <div class="song-wrapper">


                <div class="song-index-page-title">
                    <h1>Start by finding songs you love. </h1>
                </div>

                <div class='search-nav'>

                    <%= form_tag(songs_path , :method => 'get') do%>
                    <%= label_tag(:q, "Search by song title:", class: 'search-title') %>
                    <%= text_field_tag(:search, params[:search], class: 'search-bar')  %>
                    <%= submit_tag("Search", class: 'search-button')%>
                    <% end %>

                </div>



            </div>

        </div>



        <div class="bottom-index-page-cntnr">

            <div class='bottom-index-wrapper'>

                <p><%= "Most recent songs searches:"%></p>

                <div class="recent-searches">

                    <%search = @tracks.last(5)%>
                    <%search.each do |s|%>
                    <p id='track-name'><%=link_to s.name, song_path(s.id)%></p>
                    <p id='artist-name'><%=s.album.artist.name%><p>
                            <%end%>

                </div>

            </div>



        </div>


