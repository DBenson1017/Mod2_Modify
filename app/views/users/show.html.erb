<h1>Welcome to Modify!</h1>
<h2>Hello <%=@user.name%>!</h2>

<% @user.playlists.each do |p|%>
<p><%=link_to p.name, playlist_path(p)%></p>
<%end%>




<%= form_tag(songs_path , :method => 'get') do%>
     <%= label_tag(:q, "Search for songs:") %>
     <%= text_field_tag(:search, params[:search]) %>
     <%= submit_tag("search")%>
 <% end %>
 
